{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=marketplace_db;Username=marketplace;Password=marketplace_password;Search Path=users_service;",
    "Redis": "redis:6379"
  },

  "Authentication": {
    "Jwt": {
      "SecretKey": "your-super-secret-jwt-key-minimum-32-characters-long-for-security",
      "Issuer": "UsersService",
      "Audience": "MarketplaceClient",
      "AccessTokenExpiryMinutes": 10,
      "RefreshTokenExpiryDays": 14,
      "ValidateIssuer": true,
      "ValidateAudience": true,
      "ValidateLifetime": true,
      "ClockSkew": "00:05:00"
    },
    "Redis": {
      "ConnectionString": "redis:6379",
      "KeyPrefix": "marketplace:auth:",
      "DefaultDatabaseIndex": 0
    },
    "Session": {
      "DefaultSessionDuration": "1.00:00:00",
      "RefreshThreshold": "00:30:00",
      "MaxConcurrentSessions": 5,
      "EnableSessionExtension": true,
      "SessionExtensionThreshold": "00:15:00"
    }
  },

  "Jwt": {
    "Key": "your-super-secret-jwt-key-minimum-32-characters-long-for-security",
    "Issuer": "UsersService", 
    "Audience": "MarketplaceClient",
    "AccessTokenMinutes": 10,
    "RefreshTokenDays": 14
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.PostgreSQL" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "PostgreSQL",
        "Args": {
          "connectionString": "ConnectionStrings:DefaultConnection",
          "tableName": "Logs",
          "needAutoCreateTable": true
        }
      }
    ]
  }

}
