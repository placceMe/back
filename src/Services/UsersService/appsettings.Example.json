{
  "ConnectionStrings": {
    "DefaultConnection": "Host=postgres-db;Database=marketplace_db;Username=postgres;Password=postgres;Search Path=users_service"
  },
  "Authentication": {
    "Jwt": {
      "SecretKey": "your-super-secret-key-that-is-at-least-32-characters-long-for-production",
      "Issuer": "Marketplace",
      "Audience": "MarketplaceClients",
      "AccessTokenExpiryMinutes": 15,
      "RefreshTokenExpiryDays": 7,
      "ValidateIssuer": true,
      "ValidateAudience": true,
      "ValidateLifetime": true,
      "ClockSkew": "00:00:00"
    },
    "Redis": {
      "ConnectionString": "redis:6379",
      "KeyPrefix": "marketplace:auth:",
      "DefaultDatabaseIndex": 0
    },
    "Session": {
      "DefaultSessionDuration": "1.00:00:00",
      "RefreshThreshold": "00:30:00",
      "MaxConcurrentSessions": 5,
      "EnableSessionExtension": true,
      "SessionExtensionThreshold": "00:15:00"
    }
  },
  "NotificationsService": {
    "BaseUrl": "http://notifications-service:80/"
  },
  "Serilog": {
    "MinimumLevel": "Information"
  }
}