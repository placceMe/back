{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=marketplace_db;Username=marketplace;Password=marketplace_password;Search Path=products_service;"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.PostgreSQL" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "PostgreSQL",
        "Args": {
          "connectionString": "ConnectionStrings:DefaultConnection",
          "tableName": "Logs",
          "needAutoCreateTable": true
        }
      }
    ]
  },
    "FilesService": {
    "BaseUrl": "http://files-service:80/"
  }
}
