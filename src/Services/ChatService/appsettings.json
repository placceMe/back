{
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.PostgreSQL"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "PostgreSQL",
        "Args": {
          "connectionString": "Host=localhost;Port=5432;Database=marketplace_db;Username=marketplace;Password=marketplace_password;Search Path=chat_service;",
          "tableName": "Logs",
          "needAutoCreateTable": true
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=marketplace_db;Username=marketplace;Password=marketplace_password;Search Path=chat_service;"
  },
  "Jwt": {
    "Key": "your-super-secret-jwt-key-minimum-32-characters-long-for-security"
  },
  "UsersService": {
    "BaseUrl": "http://localhost:5002/"
  },
  "ProductsService": {
    "BaseUrl": "http://localhost:5003/"
  },
  "ALLOWED_ORIGINS": "http://localhost:5173",
  "AllowedHosts": "*"
}
