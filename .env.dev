# Environment configuration
ENVIRONMENT=Development

# Database configuration
DB_HOST=postgres-db

# Redis configuration
REDIS_HOST=redis

# MinIO configuration
MINIO_HOST=minio

# MailHog configuration
MAILHOG_HOST=mailhog

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Inter-service URLs (for Docker network communication)
USERS_SERVICE_URL=http://users-service:80/
PRODUCTS_SERVICE_URL=http://products-service:80/
FILES_SERVICE_URL=http://files-service:80/
NOTIFICATIONS_SERVICE_URL=http://notifications-service:8080/

